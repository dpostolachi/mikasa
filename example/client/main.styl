$color = #3498db
html
    font-size 62.4%
body
    margin 0
    font-size 1.4rem
    background #fafafa
    font-family sans-serif
    color #212121
*
    box-sizing border-box
a
    text-decoration none
h1
h3
    font-weight normal
.container
    display block
    margin 80px auto
    width 1000px
    padding 6px 12px
    border 1px solid rgba(0, 0, 0, .2)
    position relative
    max-width 100%
    background #fff
    border-radius 3px
    overflow hidden
    +below(1000px)
        margin 0 auto
    .featured
        display block
        margin 0px -12px
        padding 6px 12px
        h3
            display block
            font-size 2rem
    .thumb
        display block
        margin-bottom 6px
        &Art
            display inline-block
            vertical-align top
            width 100px
            height 100px
            position relative
            a:before
                display none
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background rgba(0, 0, 0, .4)
                color #fff
                font-size 3.2rem
                text-align center
                line-height 100px
            a:hover:before
                display block
        &Details
            display inline-block
            vertical-align top
            width calc(100% - 100px)
            padding 6px 12px
        &Title
            display block
            line-height 2.4rem
            font-size 1.6rem
        &Artist
            display block
            line-height 2rem
            font-size 1.4rem
            color $color
            &:hover
                color lighten($color, 15%)
        &Date
            display block
            font-size 1.2rem
            line-height 1.4rem
            color #9a9a9a

    button[type="button"]
        display block
        margin 12px 0px
        height 3.2rem
        line-height 3.2rem
        padding 0px 1.2rem
        color #fff
        border none
        background $color
        border-radius 3px
        font-size 1.6rem
        &:hover
            lighten($color, 10%)
    .searchForm
        display block
        input[type='text']
            display inline-block
            vertical-align middle
            height 42px
            line-height 42px
            padding 0px 12px
            border none
            border-left 1px solid rgba(0, 0, 0, .2)
            border-top 1px solid rgba(0, 0, 0, .2)
            border-bottom 1px solid rgba(0, 0, 0, .2)
            font-size 1.8rem
            width calc(100% - 90px)
            position relative
        button[type='submit']
            display inline-block
            vertical-align middle
            height 42px
            line-height 42px
            padding 0px 12px
            width 90px
            border none
            font-size 1.6rem
            color #fff
            background $color
            &:hover
                background lighten($color, 10%)
    .searchResults
        display block
        min-height 200px
        &.pending
            opacity .1
